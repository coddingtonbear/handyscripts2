<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extension-handyscripts2">
	<schema path="/org/gnome/shell/extensions/handyscripts2/" id="org.gnome.shell.extensions.handyscripts2">

		<key name="scripts-button-show" type="b">
			<default>true</default>
			<summary>Show scripts button in menu.</summary>
			<description>Show a button that opens the folder where are located the scripts.</description>
		</key>

		<key name="keep-terminal-alive" type="b">
			<default>false</default>
			<summary>Keep terminal alive when script ends.</summary>
			<description>Keep terminal alive when script ends.</description>
		</key>

		<key name="scripts-folder-path" type="s">
			<default>''</default>
			<summary>Scripts folder path</summary>
			<description>Script folder path.</description>
		</key>

		<key name="file-manager" type="s">
			<default>"nautilus"</default>
			<summary>File manager</summary>
			<description>File manager</description>
		</key>

		<key name="terminal-command" type="s">
			<default>"gnome-terminal --"</default>
			<summary>Terminal to execute the scripts.</summary>
			<description>Terminal to execute the scripts.</description>
		</key>

		<key name="bash-command" type="s">
			<default>"bash"</default>
			<summary>Command to execute bash scripts.</summary>
			<description>Command to execute bash scripts.</description>
		</key>

		<key name="python-command" type="s">
			<default>"python"</default>
			<summary>Command to execute Python scripts.</summary>
			<description>Command to execute Python scripts.</description>
		</key>
	</schema>
</schemalist>
